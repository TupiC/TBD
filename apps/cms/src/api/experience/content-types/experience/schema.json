{
  "kind": "collectionType",
  "collectionName": "experiences",
  "info": {
    "singularName": "experience",
    "pluralName": "experiences",
    "displayName": "experiences"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "key": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "summary": {
      "type": "richtext"
    },
    "hero_image": {
      "type": "string"
    },
    "address": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "geo": {
      "type": "component",
      "component": "shared.geo-coordinates",
      "repeatable": false
    },
    "opened_months": {
      "type": "component",
      "component": "shared.month",
      "repeatable": false
    },
    "opening_hours": {
      "type": "component",
      "component": "shared.weekly-opening-hours",
      "repeatable": false
    },
    "adults_only": {
      "type": "boolean",
      "default": false
    },
    "closed_days": {
      "type": "component",
      "component": "shared.closed-day",
      "repeatable": true
    },
    "images": {
      "type": "json"
    },
    "free_access": {
      "type": "boolean",
      "default": false
    },
    "opening_all_year": {
      "type": "boolean",
      "default": false
    },
    "unrestricted_access": {
      "type": "boolean",
      "default": false
    },
    "dogs_allowed": {
      "type": "boolean",
      "default": false
    },
    "accessibility_state": {
      "type": "enumeration",
      "enum": [
        "full",
        "partly",
        "unknown",
        "none"
      ]
    },
    "origin_url": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
