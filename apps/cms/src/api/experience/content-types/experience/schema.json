{
    "kind": "collectionType",
    "collectionName": "experiences",
    "info": {
        "singularName": "experience",
        "pluralName": "experiences",
        "displayName": "experiences"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "key": {
            "type": "string",
            "required": true,
            "unique": true
        },
        "category": {
            "type": "string",
            "required": true
        },
        "url": {
            "type": "string"
        },
        "name": {
            "type": "string",
            "required": true
        },
        "summary": {
            "type": "richtext"
        },
        "hero_image": {
            "type": "string"
        },
        "address": {
            "type": "component",
            "repeatable": false,
            "component": "shared.address"
        },
        "geo": {
            "type": "component",
            "repeatable": false,
            "component": "shared.geo-coordinates"
        },
        "opened_months": {
            "type": "component",
            "repeatable": true,
            "component": "shared.month"
        },
        "opening_hours": {
            "type": "component",
            "repeatable": false,
            "component": "shared.weekly-opening-hours"
        },
        "adults_only": {
            "type": "boolean",
            "default": false
        },
        "closed_days": {
            "type": "component",
            "repeatable": true,
            "component": "shared.closed-day"
        },
        "images": {
            "type": "json"
        },
        "free_access": {
            "type": "boolean",
            "default": false
        },
        "opening_all_year": {
            "type": "boolean",
            "default": false
        },
        "unrestricted_access": {
            "type": "boolean",
            "default": false
        },
        "dogs_allowed": {
            "type": "boolean",
            "default": false
        },
        "accessibility_state": {
            "type": "enumeration",
            "enum": ["full", "partly", "unknown"]
        }
    }
}
